{
    "name": "plaqode-platform",
    "version": "1.0.0",
    "private": true,
    "description": "Unified Plaqode Platform Monorepo - QR Generation, Authentication & Platform Services",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "clean": "turbo run clean",
        "test": "turbo run test",
        "cardify:dev": "npm run dev --workspace=apps/cardify",
        "qrstudio-web:dev": "npm run dev --workspace=apps/qrstudio-web",
        "qrstudio-api:dev": "npm run dev --workspace=apps/qrstudio-api",
        "plaqode-web:dev": "npm run dev --workspace=apps/plaqode-web",
        "plaqode-auth:dev": "npm run dev --workspace=apps/plaqode-auth",
        "deploy:auth": "fly deploy --config apps/plaqode-auth/fly.toml --dockerfile apps/plaqode-auth/Dockerfile",
        "deploy:api": "fly deploy --config apps/qrstudio-api/fly.toml --dockerfile apps/qrstudio-api/Dockerfile"
    },
    "devDependencies": {
        "prettier": "^3.0.0",
        "turbo": "^2.0.0",
        "typescript": "^5.3.0"
    },
    "packageManager": "npm@10.2.0",
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "dependencies": {
        "@types/file-saver": "^2.0.7",
        "file-saver": "^2.0.5"
    }
}
