# Database
DATABASE_URL="postgresql://postgres:2404@localhost:5432/qrstudio_db?schema=public"

# API
PORT=3005
NODE_ENV=development

# CORS (for development)
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Frontend URL (for QR code redirects - typically Plaqode Web)
FRONTEND_URL="http://localhost:3000"

# Auth
# The path to the public key from the auth service (relative to this app root in dev)
JWT_PUBLIC_KEY_PATH=../plaqode-auth/keys/public.pem

# Header sent by gateway/auth service
AUTH_HEADER_NAME=x-user-id
